<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppControleFinanceiro.Views.TransactionEdit"
             Title="TransactionEdit">
    <VerticalStackLayout Spacing="10">
        <Border BackgroundColor="Black" Padding="15" Margin="15" Stroke="Transparent" StrokeShape="RoundRectangle 30">
            <Grid RowDefinitions="Auto" ColumnDefinitions="*, 30">
                <Label HorizontalOptions="Center" Text="Atualizar" Grid.Row="0" Grid.Column="0" TextColor="White"/>
                <Image HorizontalOptions="Center" Source="close.png" Grid.Row="0" Grid.Column="1" WidthRequest="17">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
        </Border>
        <Grid RowDefinitions="Auto" ColumnDefinitions="*, *" Margin="30, 10">
            <RadioButton IsChecked="True" Content="Receita"/>
            <RadioButton HorizontalOptions="End" Grid.Column="1" Content="Despesa"/>
        </Grid>

        <Entry Placeholder="Nome" Margin="15,0"/>
        <DatePicker Margin="15,0"/>
        <Entry Placeholder="Valor" Margin="15,0"/>

        <Button Text="Salvar" Margin="15,0" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>